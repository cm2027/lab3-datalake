// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "HUDI devcontainer",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "ghcr.io/cm2027/lab3-datalake/devcontainer:devcontainer-image",
	"containerEnv": {
		"JAVA_TOOL_OPTIONS": "-XX:+IgnoreUnrecognizedVMOptions -XX:+UseParallelGC -XX:-UseContainerSupport --add-exports=java.base/sun.nio.ch=ALL-UNNAMED --add-opens=java.base/java.util=ALL-UNNAMED --add-opens=java.base/java.nio=ALL-UNNAMED --add-opens=java.base/java.lang.invoke=ALL-UNNAMED",
		"NS_PREFIX": ""
	},
	"runArgs": [
		"--add-host=namenode:127.0.0.1"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "bash -c '{ cd .devcontainer && go run ./cmd/ensure-exec; go run ./cmd/ensure-lf; sudo cp ./scripts/xdg-open /usr/bin/xdg-open; }' & { pip3 install --user -r requirements.txt; }"
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}